                                                        <td>{!item.Bank__r.Name}</td>
                                                        <td>
                                                            <center>
                                                                <lightning:input aura:id="establishmentId" style="margin-top:0.5em;" type="checkbox-button" label="" id="{!index}" name="{!item.Id}" checked="{!item.check}" onchange="{!c.agregarEstablecimiento}"/>
