        <aura:if isTrue="{!v.showSpinnerPrime}">
            <lightning:spinner size="large"/>
        </aura:if>
        <aura:if isTrue="{!v.showSpinner}">
            <lightning:spinner size="large"/>
        </aura:if>
        <div>  <!--style="background-color:#DDF1FC;border:1px solid #A9DFFE;border-radius:5px;"-->
            <div name="titulo" style="margin-bottom:1em;">
                <div class="slds-m-top_medium">
                    <img style="display:block;margin-left:auto;margin-right:5%;" src="{!$Resource.CotizacionesPDF + '/Encabezados/'+v.data.headerData.Product2.ProductLogo__c}" width="200" height="100" />
                </div>
                <center>
                    <span class="titulo">Contrato {!v.data.headerData.Product2.Name}</span>
                </center>
            </div>
            <div name="contenedor" class="slds-m-left_x-large slds-m-right_x-large  bordeAzul">
                <div name="Infomación" >
                    <c:CON_ContractHeader_LC data="{!v.data.headerData}"/>
                </div>
                <div name="Estructura de Cuentas" class="slds-m-around_x-large bordeGris">
                    <div class="slds-m-around_medium">Estructura de Cuentas</div>
                    <div>
                        <div class="slds-m-around_medium">
                            <div class="seccionDiv">
                                <h2 style="padding-left:1em;" class="slds-text-heading_small">
                                    Entidad Legal
                                </h2>
                            </div>
                            <div>
                                <div name="Busqueda Entidad Legal" class="slds-m-around_medium">
                                    <div>
                                        <div style="width:25%;display:inline-block;vertical-align:middle;">
                                            <lightning:combobox disabled="{!or(v.data.etapa!='Contrato', v.blockEdition)}" required="true" class="{!if(or(v.data.contrato.Entidad_Cuenta__c=='',v.data.contrato.Entidad_Cuenta__c==null) ,'classError slds-m-around_small','slds-m-around_small')}" options="{!v.data.ECdisp}" value="{!v.data.contrato.Entidad_Cuenta__c}" label="Entidades Legales" onchange="{!c.cambioEntidad}"/>
                                        </div>
                                        <div style="width:70%;display:inline-block;margin-left:5%;vertical-align:middle;">
                                            <div style="width:30%;display:inline-block;vertical-align:middle;" class="slds-align_absolute-center">
                                                <div>TIPO DE PERSONA</div>
                                                <div>{!v.entidadSel.EntidadLegal__r.RecordType.Name}</div>
                                            </div>
                                            <div style="width:30%;display:inline-block;vertical-align:middle;" class="slds-align_absolute-center">
                                                <div>RAZÓN SOCIAL</div>
                                                <div>{!v.entidadSel.EntidadLegal__r.RazonSocial__c}</div>
                                            </div>
                                            <div style="width:30%;display:inline-block;vertical-align:middle;" class="slds-align_absolute-center">
                                                <div>RFC</div>
                                                <div>{!v.entidadSel.Name}</div>
                                            </div>  
                                        </div>                                                                
                                    </div>
                                    <div>
                                        <div style="width:25%;display:inline-block;margin-top:1px;vertical-align:top;">
                                            <lightning:combobox disabled="{!or(v.data.etapa!='Contrato', v.blockEdition)}" required="true" class="{!if(or(v.data.contrato.Contacto__c=='',v.data.contrato.Contacto__c==null) ,'classError slds-m-around_small','slds-m-around_small')}" options="{!v.representantes}" label="Representante legal" value="{!v.data.contrato.Contacto__c}"/>
                                        </div>                                
                                    </div>
                                    <div>
                                        <div style="width:25%;display:inline-block;margin-top:1px;vertical-align:top;">
                                            <lightning:combobox required="true" class="{!if(or(v.data.contrato.PartidaPresupuesto__r.Quote.Opportunity.Contacto__c=='',v.data.contrato.PartidaPresupuesto__r.Quote.Opportunity.Contacto__c==null) ,'classError slds-m-around_small','slds-m-around_small')}" options="{!v.data.contactosCuenta}" label="{!if(v.data.headerData.Product2.IsAffiliate__c, 'Interlocutor' , 'Administrador de Plataforma')}" value="{!v.data.contrato.PartidaPresupuesto__r.Quote.Opportunity.Contacto__c}" disabled="true" title="Este valor se ingresa en la oportunidad" />
                                        </div>                                
                                    </div>
                                    <div>
                                        <div style="width:95%;display:inline-block;vertical-align:middle;">
                                            <lightning:combobox disabled="{!or(v.data.etapa!='Contrato', v.blockEdition)}" required="true" class="{!if(or(v.data.contrato.FiscalAddress__c=='',v.data.contrato.FiscalAddress__c==null) ,'classError slds-m-around_small','slds-m-around_small')}" options="{!v.direcciones}" label="Dirección Fiscal" value="{!v.data.contrato.FiscalAddress__c }" onchange="{!c.cambioDireccion}"/>
                                        </div>       
                                        <!--div style="width:70%;display:inline-block;vertical-align:middle;margin-left:5%;">
                                            <lightning:input type="text" label="Dirección seleccionada" aura:id="dirSel" disabled="true"/>                                                                       
                                        </div-->  
                                    </div>
                                    <aura:if isTrue="{!v.data.headerData.Product2.SendToSIGLO__c}">
                                        <div class="slds-grid slds-gutters">
                                            <div class="slds-col slds-m-left_medium slds-m-right_medium">
                                                <aura:if isTrue="{!v.entidadSel.EntidadLegal__r.PersonType__c == 'Persona Moral - Mexicana'}">
                                                    <div>
                                                        <div style="width:100%;display:inline-block;vertical-align:top;" class="slds-p-top_x-small">
                                                            <lightning:input type="text" name="input1SIGLO" label="Número de firma electrónica avanzada" value="{!v.entidadSel.EntidadLegal__r.FEA__c}" required="true" maxlength="25" minlength="1" pattern="[0-9]{1,25}" messageWhenPatternMismatch="Favor de incluir sólo números." disabled="{!or(v.data.etapa!='Contrato', v.blockEdition)}"/>
                                                        </div>
                                                    </div>
                                                </aura:if>
                                                <aura:if isTrue="{!or(v.entidadSel.EntidadLegal__r.PersonType__c == 'Persona Moral - Mexicana', v.entidadSel.EntidadLegal__r.PersonType__c == 'Persona Moral - Extranjera' )}">
                                                    <div>
                                                        <div style="width:100%;display:inline-block;vertical-align:top;" class="slds-p-top_x-small">
                                                            <lightning:input type="date" name="input2SIGLO" label="Fecha de constitución de la empresa" value="{!v.entidadSel.EntidadLegal__r.DeedDate__c}" required="true" disabled="{!or(v.data.etapa!='Contrato', v.blockEdition)}"/>
                                                        </div>
                                                    </div>
                                                </aura:if>
                                                <div>
                                                    <div style="width:100%;display:inline-block;vertical-align:top;" class="slds-p-top_x-small">
                                                        <lightning:input type="text" name="input3SIGLO" label="Número de cuenta" value="{!v.entidadSel.EntidadLegal__r.AccountNumber__c}" required="true" maxlength="25" minlength="1" pattern="[0-9]{1,25}" messageWhenPatternMismatch="Favor de incluir sólo números." disabled="{!or(v.data.etapa!='Contrato', v.blockEdition)}"/>
                                                    </div>
                                                </div>
                                                <div>
                                                    <div style="width:100%;display:inline-block;vertical-align:top;" class="slds-p-top_x-small">
                                                        <lightning:input type="text" name="input4SIGLO" label="Número de la clave" value="{!v.entidadSel.EntidadLegal__r.KeyNumber__c}" required="true" maxlength="25" minlength="1" pattern="[0-9]{1,25}" messageWhenPatternMismatch="Favor de incluir sólo números." disabled="{!or(v.data.etapa!='Contrato', v.blockEdition)}"/>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="slds-col">
                                                <div>
                                                    <div style="width:100%;display:inline-block;vertical-align:top;" class="slds-p-top_x-small">
                                                        <lightning:input type="text" name="input5SIGLO" label="Geolocalización" value="{!v.entidadSel.EntidadLegal__r.Geolocation__c}" required="true" maxlength="40" minlength="1" disabled="{!or(v.data.etapa!='Contrato', v.blockEdition)}"/>
                                                    </div>
                                                </div>
                                                <aura:if isTrue="{!or(v.entidadSel.EntidadLegal__r.PersonType__c == 'Persona Moral - Mexicana', v.entidadSel.EntidadLegal__r.PersonType__c == 'Persona Moral - Extranjera' )}">
                                                    <div>
                                                        <div style="width:100%;display:inline-block;vertical-align:top;" class="slds-p-top_x-small">
                                                            <label class="slds-form-element__label" for="text-input-id-1">
                                                                <abbr class="slds-required" title="required">* </abbr>Giro, Actividad o Objeto Social</label>
                                                            <c:CustomLookup selectedRecord="{!v.entidadSel.EntidadLegal__r.EconomicActivity__r}" objectAPIName="EconomicActivity__c" IconName="custom:custom44"/>
                                                        </div>
                                                    </div>
                                                </aura:if>
                                                <aura:if isTrue="{!v.entidadSel.EntidadLegal__r.PersonType__c == 'Persona Moral - Mexicana'}">
                                                    <div>
                                                        <div style="width:100%;display:inline-block;vertical-align:top;" class="slds-p-top_x-small">
                                                            <lightning:input type="text" name="input6SIGLO" label="Número de escritura de la persona moral" value="{!v.entidadSel.EntidadLegal__r.DeedNumber__c}" required="true" maxlength="30" minlength="1" disabled="{!or(v.data.etapa!='Contrato', v.blockEdition)}"/>
                                                        </div>
                                                    </div>
                                                </aura:if>
                                            </div>
                                        </div>
                                    </aura:if>
                                </div>
                            </div>
                        </div>
                        <div class="{!if(v.data.headerData.Product2.IsAffiliate__c, 'slds-hide','slds-m-around_medium slds-show')}">
                            <div class="slds-m-around_medium">
                                <div class="seccionDiv">
                                    <h2 style="padding-left:1em;" class="slds-text-heading_small">
                                        Filiales
                                    </h2>
                                </div>
                                <div>
                                    <div name="Filiales" class="slds-m-around_medium" style="height:12em;overflow:auto;">
                                        <table>
                                            <thead>
                                                <tr style="border-bottom:1px solid gray;">
                                                    <th>TIPO DE PERSONA</th>
                                                    <th>RAZON SOCIAL</th>
                                                    <th>RFC</th>
                                                    <th><center>ADMINISTRADOR DE PLATAFORMA</center></th>--
                                                    <th><center>Agregar</center></th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <aura:iteration items="{!v.entidadesFiliales}" var="item" indexVar="index">
                                                    <aura:if isTrue="{!or(and(item.EntidadLegal__r.PersonType__c == v.entidadSel.EntidadLegal__r.PersonType__c, v.data.headerData.Product2.SendToSIGLO__c), not(v.data.headerData.Product2.SendToSIGLO__c) )}">
                                                        <tr style="border-bottom:1px solid gray;">
                                                            <td>{!item.EntidadLegal__r.RecordType.Name}</td>
                                                            <td>{!item.EntidadLegal__r.RazonSocial__c}</td>
                                                            <td>{!item.Name}</td>
                                                            <td style="vertical-align:middle;" >
                                                                <center>
                                                                    <lightning:combobox disabled="{!or(v.data.etapa!='Contrato', v.blockEdition)}" style="width:80%;" options="{!v.data.contactosCuenta}" variant="label-hidden" value="{!item.filial.PlatformAdministrator__c}"/>                                                       
                                                                </center>
                                                            </td>
                                                            <td>
                                                                <center>
                                                                    <lightning:input disabled="{!or(v.data.etapa!='Contrato', v.blockEdition)}" style="margin-top:0.5em;" type="checkbox-button" label="" id="{!index}" name="{!item.Id}" checked="{!item.check}" onchange="{!c.agregarFilial}"/>
                                                                </center>                                                        
                                                            </td>
                                                        </tr>
                                                    </aura:if>
                                                </aura:iteration>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="{!if(and(v.data.headerData.Product2.IsAffiliate__c,v.data.headerData.Product2.Family=='Benefits'), 'slds-m-around_medium slds-show' , 'slds-hide')}">
                            <div class="enlinea  slds-m-around_small" style="width: 98%;">
                                <div class="enlinea">
                                    <img src="{!$Resource.Iconos + '/IconosAltaContrato/metodoPago.png'}" width="50" height="50" />
                                </div>
                                <div class="enlinea" style="float:right;">
                                    <lightning:button class="enlinea" label="Actualizar tabla" variant="brand" onclick="{!c.getCuentasBancarias}"/>
                                    <lightning:button class="enlinea slds-m-left_small" label="Nueva Cuenta Bancaria" variant="brand" onclick="{!c.crearMetodoPago}"/>
                                </div>
                            </div>
                            <div class="seccionDiv">
                                <h2 style="padding-left:1em;" class="slds-text-heading_small">
                                    Cuentas Bancarias
                                </h2>
                            </div>
                            <div>
                                <div name="metodosPago" class="slds-m-around_medium" style="height:12em;overflow:auto;">
                                    <table>
                                        <thead>
                                            <tr style="border-bottom:1px solid gray;">
                                                <th>Nombre</th>
                                                <th>Nombre de Banco</th>
                                                <th>Cuenta CLABE</th>
                                                <th>Número de Cuenta Bancaria</th>
                                                <th><center>Referencia Bancaria</center></th>
                                                <th><center>Agregar</center></th>
                                                <th></th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <aura:iteration items="{!v.metodosPago}" var="item" indexVar="index">
                                                <tr style="border-bottom:1px solid gray;">
                                                    <td>{!item.Name}</td>
                                                    <td>{!item.Bank__c}</td>
                                                    <td>{!item.CLABE__c}</td>
                                                    <td>{!item.StandardiziedBankKey__c}</td>
                                                    <td style="text-align: center;">{!item.Reference__c}</td>
                                                    <td>
                                                        <center>
                                                            <lightning:input aura:id="paymentMethodId" style="margin-top:0.5em;" type="checkbox-button" label="" id="{!'metodoPago' + index}" name="{!item.Id}" checked="{! v.bankAccSel == item.Id}" onchange="{!c.agregarCuentaBancaria}"/>
                                                        </center>                                                        
                                                    </td>
                                                    <td>
                                                        <center>
                                                            <lightning:buttonIcon name="{!item.Id}" iconName="utility:edit" variant="border-filled" onclick="{!c.editRecord}" alternativeText="Editar" title="Editar" />
                                                        </center>                                                        
                                                    </td>
                                                </tr>
                                            </aura:iteration>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div> 
                        <aura:if isTrue="{!v.data.headerData.Product2.IsAffiliate__c}">
                            <div class="{!if(and(v.data.headerData.Product2.IsAffiliate__c,v.data.headerData.Product2.Family=='Benefits'), 'slds-hide','slds-m-around_medium slds-show')}">
                                <div class="enlinea  slds-m-around_small" style="width: 98%;">
                                    <div class="enlinea">
                                        <img src="{!$Resource.Iconos + '/IconosAltaContrato/establecimiento.png'}" width="40" height="40" />
                                    </div>
                                    <div class="enlinea" style="float:right;">
                                        <lightning:button class="enlinea" label="Actualizar tabla" variant="brand" onclick="{!c.getEstablecimientos}"/>
                                        <lightning:button class="enlinea slds-m-left_small" label="Nuevo Establecimiento" variant="brand" onclick="{!c.crearEstablecimiento}"/>
                                    </div>
                                </div>
                                <div class="seccionDiv">
                                    <h2 style="padding-left:1em;" class="slds-text-heading_small">
                                        Información adicional-Establecimientos
                                    </h2>
                                </div>
                                <div>
                                    <div name="infoAdicional" class="slds-m-around_medium" style="height:12em;overflow:auto;">
                                        <table>
                                            <thead>
                                                <tr style="border-bottom:1px solid gray;">
                                                    <th>Nombre comercial</th>
                                                    <th>Dirección</th>
