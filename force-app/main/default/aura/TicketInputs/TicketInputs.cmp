    	<aura:set attribute="else">
            Tipo no seleccionado
 		</aura:set>
  	</aura:if>         
<lightning:icon iconName="utility:right"  size="x-small"  class="slds-p-right_x-small" /> 

    <aura:if isTrue="{!v.caso.Motivo__c}">
