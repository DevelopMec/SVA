<aura:component controller="TicketControladorInputs" implements="flexipage:availableForAllPageTypes,force:hasRecordId" access="global" >

    
    <aura:attribute name="recordId" type="Id"/> 
    <aura:attribute name="caso" type="Case"/>
    
    
    <!-- creación de 2 aura handler waiting y donewaiting events--> 
    <aura:attribute name="Spinner" type="boolean" default="false"/>
    <aura:handler event="aura:waiting" action="{!c.showSpinner}"/>
    <aura:handler event="aura:doneWaiting" action="{!c.hideSpinner}"/>
    <!--loading spinner start... style=Brand Medium (blue dots)-->
 	<aura:if isTrue="{!v.Spinner}">
    	<div aura:id="spinnerId" class="slds-spinner_container">
       	<div class="slds-spinner--brand  slds-spinner slds-spinner--large slds-is-relative" role="alert">
            <div class="slds-spinner__dot-a"></div>
         	<div class="slds-spinner__dot-b"></div>
       	</div>
    	</div>
 	</aura:if>

<aura:handler name="init" value="{! this}" action="{!c.doInit}"/>
<aura:handler event="force:refreshView" action="{!c.doInit}" />    
  

    
<lightning:recordEditForm aura:id="editForm" recordId="{!v.caso.Id}" objectApiName="Case"  class="slds-show">
