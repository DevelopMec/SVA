<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Valida_RFC_en_etapa_Contrato</fullName>
    <active>false</active>
    <errorConditionFormula>AND( ISBLANK( Account.RFC__c ) , ISPICKVAL( StageName , &quot;Contrato&quot;))</errorConditionFormula>
    <errorDisplayField>StageName</errorDisplayField>
    <errorMessage>Para pasar a etapa Contrato debe tener capturado el RFC en la Cuenta</errorMessage>
</ValidationRule>
