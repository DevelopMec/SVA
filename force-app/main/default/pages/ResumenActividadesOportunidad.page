                                j$(".minusBoton").css('color','#ffffff');
                                j$(".regresarBoton").css('padding','6px 14px');
                                j$(".regresarBoton").css('background','#2a94d6');
                                j$(".regresarBoton").css('color','#ffffff');
                                
                            });
                            </script>
                    </c:Panel>
                </section>
            </div>
            
        </div>
    </div>
</apex:page>